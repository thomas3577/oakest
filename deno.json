{
  "name": "@dx/oakest",
  "version": "0.0.18",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "demo": "deno run -A ./demo/main.ts",
    "lock": "deno cache --lock=deno.lock --lock-write mod.ts **/*.*.ts"
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@16.1",
    "@std/assert": "jsr:@std/assert@1",
    "@dx/inject": "jsr:@dx/inject@0.1.13"
  },
  "publish": {
    "exclude": [
      ".github",
      "demo",
      ".gitignore",
      ".editorconfig",
      "cspell.json",
      "deno.lock",
      "*.code-workspace",
      "**/*.test.ts"
    ]
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lint": {
    "rules": {
      "include": [
        "ban-untagged-todo",
        "no-deprecated-deno-api"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**"
    ]
  }
}
