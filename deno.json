{
  "name": "@dx/oakest",
  "version": "0.0.9",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "lock": "deno cache --lock=deno.lock --lock-write ./mod.ts",
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^16.0.0",
    "#std/assert": "jsr:@std/assert@^0.223",
    "@reflect": "https://deno.land/x/deno_reflect@v0.2.1/mod.ts",
    "@inject": "https://raw.githubusercontent.com/thomas3577/deno-dependency-injector/main/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo",
        "no-deprecated-deno-api"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**"
    ]
  }
}
